@model FilmeModel

@{
    ViewData["Title"] = "Editar Clientes";
}

<div class="text-center">

    <h1 class="display-4">Editar Cliente</h1>

</div>

<form asp-controller="Filme" asp-action="Atualizar" method="post">
    <div class="form-group">
        <label for="nome">Título</label>
        <input type="text" asp-for="Titulo" class="form-control" placeholder="Digite o nome do Filme!">
    </div>
    <div class="form-group">
        <label for="sinopse">Sinopse</label>
        <input type="text" asp-for="Sinopse" class="form-control" placeholder="Digite a sinopse do Filme!">
    </div>
    <div class="form-group">
        <label for="Classificacao">Classificação Indicativa</label>
        <input type="text" asp-for="Classificacao" class="form-control" placeholder="Digite a classificação indicativa do Filme!">
    </div>


    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Filme" asp-action="Index" role="button">Voltar</a>
    <input type="hidden" asp-for="Id"/>
</form>


