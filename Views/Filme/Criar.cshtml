@model HomeModel

@{
    ViewData["Title"] = "Cadastro de Filmes";
}

<div class="text-center">

    <h1 class="display-4">Adicionar Filme</h1>
</div>

<form asp-controller="Filme" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="filme">Filme</label>
        <input type="text" asp-for="Titulo" class="form-control" placeholder="Digite o nome do filme!">
    </div>
    <div class="form-group">
        <label for="sinopse">Sinopse</label>
        <input type="text" asp-for="Sinopse" class="form-control" placeholder="Digite a sinopse do filme!">
    </div>
    <div class="form-group">
        <label for="classificacao">Classificação</label>
        <input type="text" asp-for="Classificacao" class="form-control" placeholder="Digite a classificação do filme!">
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Filme" asp-action="Index" role="button">Voltar</a>
</form>
